%html
  %head
    %title= t('views.meta.title')
    %meta{ name: :description, content: t('views.meta.description') }
    %meta{ name: :keywords, content: t('views.meta.keywords') }
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag    '//cdn.rawgit.com/noelboss/featherlight/1.0.4/release/featherlight.min.css'
    = stylesheet_link_tag    '//cdn.rawgit.com/noelboss/featherlight/1.0.4/release/featherlight.gallery.min.css'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = javascript_include_tag '//cdn.rawgit.com/noelboss/featherlight/1.0.4/release/featherlight.min.js'
    = javascript_include_tag '//cdn.rawgit.com/noelboss/featherlight/1.0.4/release/featherlight.gallery.min.js'
    = csrf_meta_tags

    //javascript for google analytics
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
    
      ga('create', 'UA-22236727-5', 'ilovebasia.com');
      ga('send', 'pageview');

  %body
    .container
      = render 'layouts/header'
      = render 'layouts/messages'
      = yield
      = render 'layouts/footer'
